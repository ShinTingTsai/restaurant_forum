<div class="row justify-content-center">
  <div class="card mb-4 shadow-sm">
    <div class="row no-gutters">
      <div class="">
        <div class="card-body">
          <form action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-label-group">
              <label for="name">Name</label>
              <input type="text" name="name" id="name" class="form-control" placeholder="Name" {{#if user.name}} value="{{user.name}}" {{/if}} required autofocus>
            </div>
            <div class="form-group my-3">
              <label for="image">Image</label>
              <input type="file" class="form-control-file" id="image" name="image">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="btn btn-secondary" href="javascript:history.back()">Cancel</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>